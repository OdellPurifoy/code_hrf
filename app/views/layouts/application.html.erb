<!DOCTYPE html>
<html>
<head>
  <title>HERF</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
  <!-- Your custom CSS -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_importmap_tags %>

</head>
<body>
<div class="container pt-2 pb-2">
  <header class="d-flex justify-content-between align-items-center">
    <!-- SVG logo -->
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 60" width="180" height="36">
      <text x="0" y="45" font-family="Arial, sans-serif" font-size="45" font-weight="bold" fill="#000">HERF</text>
    </svg>
    <nav id="navbar" class="navbar">
      <ul class="list-unstyled mb-0">
        <li><a href="/" class="active">Home</a></li>
        <% if user_signed_in? %>
          <%= link_to 'Create Lounge', new_lounge_path, class: "nav-link" %>
          <%= link_to 'My Lounge', my_lounge_path, class: "nav-link" %>
          <%= link_to 'Profile', edit_user_registration_path, class: "nav-link" %>
          <%= button_to 'Log Out', destroy_user_session_path, id: 'logout', method: :delete, class: "nav-link" %>
        <% elsif user_signed_in? && current_user.subscribed? %>
          <%= link_to 'Profile', edit_user_registration_path, class: "nav-link" %>
          <%= button_to 'Log Out', destroy_user_session_path, id: 'logout', method: :delete, class: "nav-link" %>
        <% elsif user_signed_in? %>
          <%= link_to 'Profile', edit_user_registration_path, class: "nav-link" %>
          <%= button_to 'Log Out', destroy_user_session_path, id: 'logout', method: :delete, class: "nav-link" %>
        <% else %>
          <%= link_to 'Log In', new_user_session_path, class: "nav-link" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %>
        <% end %>
      </ul>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav>
  </header>
</div>


  <main>
    <div class="container">
      <%= yield %>
    </div>
  </main>

  <!-- Bootstrap JS (optional, if you need dropdowns or other Bootstrap components) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
