<section>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 4px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Profile</p>
                
                <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <div class="form-outline flex-fill mb-0">
                    <%= f.text_field :first_name, floating: true %>
                  </div>

                  <div class="form-outline flex-fill mb-0">
                    <%= f.text_field :last_name, floating: true %>
                  </div>

                  <div class="form-outline flex-fill mb-0">
                    <%= f.date_field :date_of_birth, floating: true %>
                  </div>

                  <div class="form-outline flex-fill mb-0">
                    <%= f.email_field :email, floating: true %>
                  </div>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>

                  <div class="form-outline flex-fill mb-0">
                    <small>Leave blank to keep current password</small>
                    <%= f.password_field :password, floating: true, placeholder: "Leave blank to keep current password" %>
                  </div>

                  <div class="form-outline flex-fill mb-0">
                    <%= f.password_field :password_confirmation, floating: true %>
                  </div>

                  <div class="form-outline flex-fill mb-0">
                    <small>(we need your current password to confirm your changes)</small>
                    <%= f.password_field :current_password, floating: true %>
                  </div>

                  <div class="d-flex justify-content-start mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Update", id: 'update-profile' %>
                    <div><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, id: 'cancel-account', method: :delete %></div>
                    <%= link_to "Back", :back, id: 'profile-back-link' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>