<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6">
      <h4 class="text-center mb-4">Hi, <%= @current_user.name.first %></h4>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-outline flex-fill mb-3">
          <%= f.text_field :first_name, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.text_field :last_name, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.date_field :date_of_birth, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.email_field :email, floating: true, class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-outline flex-fill mb-3">
          <small>Leave blank to keep current password</small>
          <%= f.password_field :password, floating: true, placeholder: "Leave blank to keep current password", class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.password_field :password_confirmation, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <small>(we need your current password to confirm your changes)</small>
          <%= f.password_field :current_password, floating: true, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Update", id: "update-profile", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <%= link_to "Back", :back, id: 'profile-back-link', class: "text-center d-block mt-3" %>
      <div class="text-center mt-3">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger d-block" %>
      </div>
    </div>
  </div>
</div>
