<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6">
      <h4 class="text-center mb-4">Sign up</h4> <!-- Added heading -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mx-1 mx-md-4') do |f| %>
        <div class="form-outline flex-fill mb-3">
          <%= f.text_field :first_name, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.text_field :last_name, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.date_field :date_of_birth, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.email_field :email, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <small>6 characters minimum</small>
          <%= f.password_field :password, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.password_field :password_confirmation, floating: true, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign up", id: "sign-up-button", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
