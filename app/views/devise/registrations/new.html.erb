<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 4px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                
                <%= render "devise/shared/error_messages", resource: resource %>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mx-1 mx-md-4') do |f| %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "email" %>
                      <%= f.label :first_name, class: 'form-label mt-2' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user-plus fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :last_name, autofocus: true, class: 'form-control', autocomplete: "email" %>
                      <%= f.label :last_name, class: 'form-label mt-2' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-calendar fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.date_field :date_of_birth, autofocus: true, class: 'form-control', autocomplete: "email" %>
                      <%= f.label :date_of_birth, class: 'form-label mt-2' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
                      <%= f.label :email, class: 'form-label mt-2' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
                      <%= f.label :password, class: 'form-label mt-2' %> <small>(6 characters minimum)</small>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
                      <%= f.label :password_confirmation, class: 'form-label mt-2' %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Sign up", class: 'btn btn-warning btn-lg' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>