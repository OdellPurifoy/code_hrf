<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6">
      <h4 class="text-center mb-4">Log In</h4> <!-- Added heading -->
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-outline flex-fill mb-3">
          <%= f.email_field :email, floating: true, class: "form-control" %>
        </div>

        <div class="form-outline flex-fill mb-3">
          <%= f.password_field :password, floating: true, class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.submit "Log in", id: "log-in-button", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-center d-block mt-3" %>
    </div>
  </div>
</div>
